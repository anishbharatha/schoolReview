<h4>Edit <%= resource_name.to_s.humanize %> Profile</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),
           html: {class: 'form-horizontal', method: :put }) do |f| %>
  <%= devise_error_messages! %>

<div class='form-group'>
  <label class='col-xs-2 control-label'>Email</label>
  <div class='col-xs-3'><%= f.email_field :email, :class=>'form-control input-sm', :readonly=>true%></div>
</div>

<div class='form-group'>
  <label class='col-xs-2 control-label'>Public Name</label>
  <div class='col-xs-3'><%= f.text_field :public_name, :class=>'form-control input-sm', :placeholder=>'Public name'%></div>

  <label class='col-xs-2 control-label'>Full Name</label>
  <div class='col-xs-3'><%= f.text_field :full_name, :class=>'form-control input-sm', :placeholder=>'Full name'%></div>
</div>

<div class='form-group'>
  <label class='col-xs-2 control-label'>*Password</label>
  <div class='col-xs-3'><%= f.password_field :current_password, :class=>'form-control input-sm', :placeholder=>'Current Password',autocomplete:'off', required:'true'%></div>

  <label class='col-xs-2 control-label'>Email Updates</label>
  <div class='col-xs-1'><%= f.check_box(:email_notif, class:'form-control input-xs')%></div>
</div>

<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
<% end %>

<div class='form-group'>
  <div class='col-xs-offset-2 col-xs-4'><%= f.submit 'Update my info',:class=>'btn btn-success'%></div>
</div>
<% end %>
