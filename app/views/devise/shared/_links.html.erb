<div class="row pull-right" style="margin-top: 10px;">
  <div class='col-md-12'>
    <strong>
      <%- if controller_name != 'sessions' %>
          <%= link_to '<button class="btn btn-sm btn-primary">Log in</button>'.html_safe,
                      new_session_path(resource_name)%>
      <% end -%>

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to '<button class="btn btn-sm btn-success">Sign up</button>'.html_safe,
                      new_registration_path(resource_name), class: 'text-primary', id:'sign-up'%>
      <% end -%>

      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to '<button class="btn btn-sm btn-warning">Forgot password</button>'.html_safe,
                      new_password_path(resource_name), class: 'text-primary'%>
      <% end -%>

      <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
          <%= link_to '<button class="btn btn-sm btn-info">Resend confirmation instructions</button>'.html_safe,
                      new_confirmation_path(resource_name), class: 'text-primary'%>
      <% end -%>

      <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
          <%= link_to 'Didn\'t receive unlock instructions?', new_unlock_path(resource_name) %>
      <% end -%>

      <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
              <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %><br />
          <% end -%>
      <% end -%>
    </strong>
  </div>
</div>