<%= form_for(resource, as: resource_name, url: password_path(resource_name),
             html: {class: 'form-inline pull-right', method: :post, style:'margin-top:20px'}) do |f| %>

  <div class='row'>
    <div class='form-group input-group-sm'>
        <%= f.email_field :email,:class=>'form-control',
              :placeholder=>'Email address', :required=>true, autofocus: true%>
    </div>

    <div class='form-group btn-group-sm'>
          <%= f.submit 'Send me reset password instructions', :class=>'btn btn-success btn-group-sm'%>
    </div>
  </div>

    <div class='row'>
        <%=render 'devise/shared/links'%>
    </div>

<% end %>
