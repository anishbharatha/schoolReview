<%=form_for(resource, as: resource_name, url: confirmation_path(resource_name),
     html: {method: :post, class: 'form-inline pull-right', style:'margin-top:20px'}) do |f| %>
  <%= devise_error_messages! %>

    <div class='row'>
      <div class='form-group input-group-sm'>
        <%= f.email_field :email, :class=>'form-control', :placeholder=>'Enter Email',
                          :required=>true, autofocus:true%>
      </div>
      <div class='form-group btn-group-sm'>
        <%= f.submit 'Resend confirmation instructions', :class=>'btn btn-success btn-group-sm'%>
      </div>
    </div>

    <div class='row'>
      <%=render 'devise/shared/links'%>
    </div>
<%end%>
