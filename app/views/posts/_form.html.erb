<%= form_for(@post, html: {class: 'form-horizontal'})  do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, 'error') %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%if action_name=='edit' && @post.post_type_id.to_i=='1'.to_i%>
    <div class='form-group'>
      <div class='col-xs-8'><b>Title</b><br/>
        <%= f.text_field :title, class:'form-control input-md', required:true%>
      </div>
    </div>
    <%end%>

    <div class='form-group'>
        <div class='col-xs-8'><b>Description</b><br/>
          <%= f.cktext_area :body%>
        <%#= f.text_area :body, :class=>'form-control input-md'%>
      </div>
    </div>
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :school_id %>

    <div class='form-group'>
      <div class='col-xs-4'><%= f.submit 'Update Post',:class=>'btn btn-success'%></div>
    </div>
<% end %>
