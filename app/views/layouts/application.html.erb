<!DOCTYPE html>
<html>
<head>
  <title>SchoolReview</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application','data-turbolinks-track'=> true %>
  <!--<link href='http://fonts.googleapis.com/css?family=Sigmar+One' rel='stylesheet' type='text/css'>-->
  <%= stylesheet_link_tag params[:controller] %>
  <%= javascript_include_tag params[:controller]%>
  <%= csrf_meta_tags %>
  <%= javascript_include_tag 'bootstrap'%>
  <script src='https://www.google.com/recaptcha/api.js'></script>
</head>

<body>
    <div class='container row header-row'>
      <div class='col-md-6' style='margin-top: 10px;'>
        <%=link_to "#{image_tag('title-logo-1.png', :alt=>'Django!*')}".html_safe, root_path%>
      </div>

      <%if user_signed_in?%>
        <div class='col-md-6'>
          <div class='row col-md-12 text-right'>
            <p class='text-danger'>Logged in as <strong><%= current_user.email %></strong>.
              <%= link_to 'Mailbox', message_boxes_path, :class => 'navbar-link' %> |
              <%= link_to 'Profile', edit_user_registration_path, :class => 'navbar-link' %> |
              <%= link_to 'Logout', destroy_user_session_path, method: :delete, :class => 'navbar-link'%>
            </p>
          </div>
          <div class='row col-md-12 text-right header-pipes'>
              <%= link_to 'Home', root_path, :class => 'navbar-link header-menu'%>&nbsp;&nbsp;
              <%= link_to 'Schools', schools_path, :class => 'navbar-link header-menu'%>&nbsp;&nbsp;
              <%= link_to 'Reviews', reviews_path, :class => 'navbar-link header-menu'%>&nbsp;&nbsp;
              <%if can? :index, @Engine%>
                  <%= link_to 'Users', engine_index_path, :class => 'navbar-link header-menu'%>
              <%end%>
          </div>
        </div>
      </div>
      <%else%>
      </div> <!-- Closing the header row -->
      <%end%>

    <div class='container' style="margin-top: 10px;">
      <div class='row'>
        <div class='col-md-12' style="margin-top: 20px;">
          <% if notice %> <p class="alert alert-success"><%= notice %></p> <% end %>
          <% if alert %>  <p class="alert alert-danger"><%= alert %></p>   <% end %>
        </div>
      </div>

      <div class='row'>
        <div class='col-md-12'>
            <%=yield%>
        </div>
      </div>
    </div> <!-- End of the Container class -->

    <div class='navbar text-center' id='footer'>
      <mark> by the students group</mark><br/>
    </div>
  </body>
</html>