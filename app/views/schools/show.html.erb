<div class='row col-md-12 pull-left' style='margin-bottom: 20px;'>
  <%= link_to 'Back', schools_path %>
</div>

<div class='row'>
  <div class='col-sm-1'>
    <%= image_tag @school.school_logo_url(:thumb), style: 'outline: 1px'%>
  </div>
  <div class='col-sm-9'>
    <h2><%= @school.name %> | <%=@school.aka.upcase! if @school.aka?%>
      <%if can? :edit, @school%>
          <%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_school_path(@school)%>
      <%end%>
    </h2>
  </div>
  <div class='col-sm-1'>
    <%if @reviews.size!=0%>
        <h2 class='grand-rating'><%=((@reviews.average(:faculty_expertise)+@reviews.average(:faculty_communication)+
                @reviews.average(:cost_worth)+@reviews.average(:transport)+@reviews.average(:library)+
                @reviews.average(:satisfaction_rate)+@reviews.average(:infrastructure)+
                @reviews.average(:sports)+@reviews.average(:research))/@reviews.size).round(2) %></h2>
    <%end%>
  </div>
</div>

<div role='row tabpanel'>
  <ul class='nav nav-tabs nav-justified' role='tablist'>
    <li role='presentation'>
      <a href='#about' aria-controls='about' role='tab' data-toggle='tab'>About</a>
    </li>
    <li role='presentation'>
      <a href='#discussions' aria-controls='discussions' role='tab' data-toggle='tab'>Discussions</a>
    </li>
    <li role='presentation' class="active">
      <a href='#reviews' aria-controls='reviews' role='tab' data-toggle='tab'>Reviews</a>
    </li>
    <li role='presentation'>
      <a href='#gallery' aria-controls='gallery' role='tab' data-toggle='tab'>Gallery</a>
    </li>
  </ul>

  <div class='tab-content'>
    <div role='tabpanel' class='tab-pane' id='about'><%= render 'aboutSchool'%></div>
    <div role='tabpanel' class='tab-pane' id='discussions'><%= render 'postsSchool'%></div>
    <div role='tabpanel' class='tab-pane active' id='reviews'><%= render 'reviewsSchool'%></div>
    <div role='tabpanel' class='tab-pane' id='gallery'><%= render 'gallerySchool'%></div>
  </div>
</div>
