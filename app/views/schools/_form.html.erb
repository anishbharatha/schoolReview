<%= form_for @school, :html=>{:multipart=>true},
             html: {class: 'form-horizontal', style:'margin-top:10px'} do |f| %>
    <%if @school.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@school.errors.count,'error') %> prohibited this school from being saved:</h2>

          <ul>
            <% @school.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <%end%>

    <div class='row'>
      <div class='form-group col-md-4 dropdown'>
        <%= f.label :category %></span>
        <%= f.select(:category, options_for_select(['High School','Engineering','Pharmacy','Medical','University'],:selected =>:category),
                     {class: 'form-control dropdown'}, {class: 'form-control dropdown'})%>
      </div>

      <div class='form-group col-md-8 pull-right'>
        <%= f.label :website %><br>
        <%= f.text_field :website, :class=>'form-control', :placeholder=>'website'%>
      </div>
    </div>
    <div class='row'>
      <div class='form-group col-md-3'>
        <%= f.label :aka%><br>
        <%= f.text_field :aka, :class=>'form-control aka', :placeholder=>'Acronym'%>
      </div>
      <div class='form-group col-md-9 pull-right'>
        <%= f.label :school_name %>
        <%= f.text_field :name,  :class=>'form-control', :placeholder=>'School Name'%>
      </div>
    </div>

    <div class='form-group'>
      <%= f.label :address %><br>
      <%= f.text_field :address, :class=>'form-control', :placeholder=>'Address'%>
    </div>

    <div class='row'>
      <div class='form-group col-md-6'>
        <%= f.label :city %><br>
        <%= f.text_field :city, :class=>'form-control', :placeholder=>'City'%>
      </div>

      <div class='form-group col-md-6 dropdown pull-right'>
        <%= f.label :state %></span>
        <%= f.select :state, options_for_select([
                                                        ['Andhra Pradesh','AP'],['Arunachal Pradesh','AR'],['Assam','AS'],['Bihar','BR'],['Chandigarh','CG'],
                                                        ['Chhattisgarh','CH'],['Delhi','DL'],['Goa','GA'],['Gujarat','GJ'],['Haryana','HR'],['Himachal Pradesh','HP'],
                                                        ['Jammu and Kashmir','JK'],['Jharkand','JH'],['Karnataka','KA'],['Kerala','KL'],['Madhya Pradesh','MP'],
                                                        ['Maharashtra','MH'],['Manipur','MN'],['Meghalaya','ML'],['Mizoram','MZ'],['Nagaland','NL'],
                                                        ['Odisha','OD'],['Punjab','PB'],['Rajasthan','RJ'],['Sikkim','SK'],['Tamilnadu','TN'],['Telangana','TS'],
                                                        ['Tripura','TR'],['Uttar Pradesh','UP'],['Uttarakhand','UK'],['West Bengal','WB']
                                                ], :state), {}, :class=>'form-control dropdown'%>
      </div>
    </div>

    <div class='row'>
      <div class='form-group col-md-6'>
        <%=f.label :school_logo%>
        <%= image_tag(@school.school_logo_url(:thumb)) if @school.school_logo?%>
        <%= f.file_field :school_logo %>
        <%= f.hidden_field :school_logo_cache%>
      </div>
      <div class='form-group col-md-6'>
        <p><label>Logo URL: <%= f.text_field :remote_school_logo_url%></label></p>
      </div>
      <%if @school.school_logo?%>
          <p><label><%= f.check_box :remove_school_logo%>Remove logo</label></p>
      <%end%>
    </div>

    <div class='row'>
      <div class='form-groupcol-md-12'>
        <%= f.submit :class=>'btn btn-success'%>
      </div>
    </div>
<% end %>
<style>
.aka{
    text-transform: uppercase;
}
</style>